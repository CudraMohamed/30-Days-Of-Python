#built-in functions


print('Hello, World !') #print the text valu
print(len('Hello, WOrld !'))  #counts all the characters in the string including spaces
print(type('Hello, WOrld !'))  #prints the datatype
print(str(10))  #converts 10 to string
print(int('10'))  #converts string to integer
print(float(10))  #converts the integer to decimal
input('Enter yout name : ')  #takes in user input
#help(str)  #gives information about the keyword

 #more built-in functions
print(min(20, 30, 40, 50 )) #gives the minimum value
print(max(20, 30, 40, 50 )) #gives the maximum value
print(min([20, 30, 40, 50 ])) #takes list as an argument and returns min value
print(max([20, 30, 40, 50] )) 
print(sum([20, 30, 40, 50 ])) #takes only list as an argument and return the sum of the values

#variable declaration
#snake_case
