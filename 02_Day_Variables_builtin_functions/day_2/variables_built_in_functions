print(skills)
personal_info = {
    'firstname':'Cudra',
    'secondname' : 'Morehermade',
    'country': 'Kenya',
    'city': 'Nairobi'
}
print(personal_info)
print('First name:', first_name)
print('First name length:', len(first_name))

#Declaring Multiple Variable in a Line
first_name,age,skills,friend= 'Cudra',400,'Puthon',"Ash"
print(first_name,age,skills,friend)
print('Friend :',friend)

